# Copy to .env and fill in your SMTP details for the career form.

# SMTP server (e.g. Gmail: smtp.gmail.com, Yahoo: smtp.mail.yahoo.com)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# SMTP credentials (for Gmail use an App Password, not your normal password)
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Where to receive career applications (defaults to SMTP_USER if not set)
CAREER_TO_EMAIL=rarebeelifesciences@yahoo.com

# Optional: server port
# PORT=3000
